<Page x:Class="Cargo_Fleet_Tracking_System.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cargo_Fleet_Tracking_System"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="812"
      Title="EmployeesPage">

    <Grid Background="LightGray" Margin="0,0,10,0">
        <TextBox HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" Text="Employees" VerticalAlignment="Top" Width="450" Background="#FFD6D6D6" FontSize="20" Foreground="#FF363131" SelectionBrush="#FFABADB3" IsReadOnly="True"/>
        <Button x:Name="btnAllEmployees" Content="All Employees" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="132" Height="27" Click="btnAllEmployees_Click"/>
        <Button x:Name="btnAddUser" Content="Add User" HorizontalAlignment="Left" Margin="0,68,0,0" VerticalAlignment="Top" Width="132" Height="27" Click="btnAddUser_Click"/>
        <Frame x:Name="EmployeesFrame" Content="" HorizontalAlignment="Left" Height="409" Margin="132,41,0,0" VerticalAlignment="Top" Width="318"/>
        <Frame x:Name="AddUserFrame" Content="" HorizontalAlignment="Left" Height="450" Margin="450,0,0,0" VerticalAlignment="Top" Width="352"/>



    </Grid>
</Page>
